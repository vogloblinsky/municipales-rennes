    <div class="nav-container">
        <nav class="main-nav">
            <div class="navbar-header">
                <span class="main-title">
                    <b>ÉLECTIONS MUNICIPALES</b>
                </span>
                <span><b>Rennes 2020</b></span>
                <span class="bull">&bull;</span>
                <span>Comparateur de programmes</span>
                <span class="bull">&bull;</span>
                <span class="info"><i>Intégration des programmes en cours...</i></span>
            </div>
            <div class="copyright">
                <ion-icon name="information-circle-outline" data-toggle="modal" data-target="#infoModal"></ion-icon>
                <span>&nbsp;- &copy; 2020 <a href="https://www.vincentogloblinsky.com" target="_blank">Vincent
                        Ogloblinsky</a>
                </span>
            </div>
        </nav>

        <nav class="second-nav">
            <div class="selector-button button">
                <ion-icon name="funnel"></ion-icon>
            </div>
            <div>
                <label for="thematiques">Choisissez votre thématique</label>
                <select class="thematiques-selector" id="thematiques">
                    <option value="">Toutes les thématiques</option>
                    {{#each thematiques}}
                    <option value="{{this.id}}">
                        {{this.label}}
                    </option>
                    {{/each}}
                </select>
                <label for="sous-thematiques">Choisissez votre sous-thématique</label>
                <select class="thematiques-selector" id="sous-thematiques" disabled>
                    <option value="">Toutes les sous-thématiques</option>
                    {{#each sousThematiques}}
                    <option value="{{this.id}}">
                        {{this.label}}
                    </option>
                    {{/each}}
                </select>
            </div>
            <div class="second-nav__right">
                <div class="button disabled" data-direction="-1">
                    <ion-icon name="ios-arrow-back"></ion-icon>
                </div>
                <div class="button" data-direction="1">
                    <ion-icon name="ios-arrow-forward"></ion-icon>
                </div>
            </div>
        </nav>

        <nav class="candidats-list">
            {{#each candidatsEnhanced.candidats}}
            {{#if this.liste}}
            <header data-candidatid="{{this.id}}">
                <div class="header_main-infos">

                    <figure class="avatar">
                        <img src="assets/{{this.id}}_100.jpg" alt="{{this.liste}}" loading="lazy" width="100"
                            height="100">
                    </figure>
                    <div class="candidat-infos">
                        <span class="liste">
                            {{this.liste}}
                        </span>
                        <span class="tetes">
                            {{#compare this.tetes.length 1 operator=">"}}
                            {{this.tetes.0.prenom}} {{this.tetes.0.nom}}<br />
                            {{this.tetes.1.prenom}} {{this.tetes.1.nom}}
                            {{else}}
                            {{this.tetes.0.prenom}} {{this.tetes.0.nom}}
                            {{/compare}}
                        </span>
                    </div>
                </div>
                <div class="header_second-infos">
                    <div>
                        <ion-icon name="globe"></ion-icon><a href="https://{{this.website}}"
                            target="_blank">{{this.website}}</a>
                    </div>
                    <div>
                        <ion-icon name="calculator"></ion-icon>{{this.propositions.length}} propositions référencées
                    </div>
                </div>
            </header>
            {{/if}}
            {{/each}}
        </nav>
    </div>

    <nav class="selector-nav">
        <div class="container">
            {{#each candidats-light}}
            {{#if this.liste}}
            <header data-candidatid="{{this.id}}">
                <div class="checkmark">
                    <ion-icon name="checkmark-circle-outline"></ion-icon>
                </div>
                <div class="header_main-infos">

                    <figure class="avatar">
                        <img src="assets/{{this.id}}_100.jpg" alt="{{this.liste}}" loading="lazy" width="100"
                            height="100">
                    </figure>
                    <div class="candidat-infos">
                        <span class="tetes">
                            {{#compare this.tetes.length 1 operator=">"}}
                            {{this.tetes.0.prenom}} {{this.tetes.0.nom}}<br />
                            {{this.tetes.1.prenom}} {{this.tetes.1.nom}}
                            {{else}}
                            {{this.tetes.0.prenom}} {{this.tetes.0.nom}}
                            {{/compare}}
                        </span>
                    </div>
                </div>
            </header>
            {{/if}}
            {{/each}}
        </div>
    </nav>

    <main class="main-container">
        <div class="candidats-wrapper">
            {{#each candidatsEnhanced.candidats}}
            {{#if this.liste}}
            <article data-candidatid="{{this.id}}" class="visible">
                <div class="candidat-content">
                    {{#each this.orderedThematiques}}
                    <section data-thematique-id="{{this.id}}" class="thematique">
                        <h2>
                            <ion-icon name="ios-{{this.icon}}"></ion-icon>
                            <span>{{this.label}}</span>
                        </h2>
                        {{#each this.sous-thematiques}}
                        <section data-sous-thematique-id="{{this.id}}" class="sous-thematique">
                            <h3>{{this.label}}</h3>
                            <div class="propositions">
                                {{#compare this.propositions.length 0 operator="==="}}
                                <p class="empty"><i>Aucune proposition référencée</i></p>
                                {{else}}
                                {{#each this.propositions}}
                                <p>{{#if this.important}}<b>{{this.label}}</b>{{else}}{{this.label}}{{/if}}</p>
                                {{/each}}
                                {{/compare}}

                            </div>
                        </section>
                        {{/each}}
                    </section>
                    {{/each}}
                </div>
            </article>
            {{/if}}
            {{/each}}
        </div>
    </main>

